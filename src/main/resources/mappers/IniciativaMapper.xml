<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.eci.cvds.sampleprj.dao.mybatis.mappers.IniciativaMapper">

    <insert id="insertarIniciativa" parameterType="map">
        INSERT INTO iniciativa (nombre , descripcion , estado) VALUES ( #{iniciativa.nombre}, #{iniciativa.descripcion} , #{iniciativa.estado} );
    </insert>

    <insert id="agregarPalabraClaveAIniciativa" parameterType="map">
        INSERT INTO palabraclave (iniciativa , palabra) VALUES( #{iniciativa.nombre}, #{palabra} );
    </insert>

    <resultMap type='Iniciativa' id='IniciativaResult'>
        <id property='id' column='id'/>
        <result property='nombre' column='nombre'/>
        <result property='descripcion' column='descripcion'/>
        <result property='estado' column='estado'/>
        <collection property='palabras_clave' ofType='PalabraClave'  resultMap="edu.eci.cvds.sampleprj.dao.mybatis.mappers.PalabraClave.PalabraClaveResult" columnPrefix='palabraclave_'></collection>
    </resultMap>


</mapper>
